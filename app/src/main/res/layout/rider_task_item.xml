<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="7dp"
    app:cardBackgroundColor="#ffffff">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <at.markushi.ui.CircleButton
            android:id="@+id/rider_task_start_ride"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/rider"
            app:cb_color="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <at.markushi.ui.CircleButton
            android:id="@+id/rider_task_done"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/tick1"
            app:cb_color="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rider_task_start_ride" />

        <View
            android:id="@+id/view3"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/raleway_light"
            android:text="Order ID :"
            android:textColor="@color/place_autocomplete_search_text"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/view3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rider_task_item_orderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="1122542217852"
            android:textAlignment="textStart"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/rider_task_start_ride"
            app:layout_constraintStart_toEndOf="@+id/textView" />

        <TextView
            android:id="@+id/textView88"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/raleway_light"
            android:text="Total Bill:"
            android:textColor="@color/place_autocomplete_search_text"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/view3"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/rider_task_item_total_bill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="RS. 250"
            android:textAlignment="textStart"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView88"
            app:layout_constraintEnd_toStartOf="@+id/rider_task_start_ride"
            app:layout_constraintStart_toEndOf="@+id/textView88" />

        <TextView
            android:id="@+id/textView89"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/raleway_light"
            android:text="Client Name: "
            android:textColor="@color/place_autocomplete_search_text"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/view3"
            app:layout_constraintTop_toBottomOf="@+id/textView88" />

        <TextView
            android:id="@+id/rider_task_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="RS. 250"
            android:textAlignment="textStart"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView89"
            app:layout_constraintEnd_toStartOf="@+id/rider_task_done"
            app:layout_constraintStart_toEndOf="@+id/textView89" />

        <TextView
            android:id="@+id/textView99"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/raleway_light"
            android:text="Address: "
            android:textColor="@color/place_autocomplete_search_text"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/view3"
            app:layout_constraintTop_toBottomOf="@+id/textView89" />

        <TextView
            android:id="@+id/rider_task_item_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="97 Salik Street"
            android:textAlignment="textStart"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView99"
            app:layout_constraintEnd_toStartOf="@+id/rider_task_done"
            app:layout_constraintStart_toEndOf="@+id/textView99" />





    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>